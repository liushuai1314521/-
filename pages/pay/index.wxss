page {
  background-color: #F2F2F2;
  padding-bottom: 100rpx;
}
.revice_address_row .detail_address .address_beauty {
  padding: 20rpx;
  background-color: #fff;
  width: 95%;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.revice_address_row .detail_address .address_beauty .address_left {
  flex: 1;
}
.revice_address_row .detail_address .address_beauty .address_left .iconfont {
  font-size: 60rpx;
  text-align: center;
  color: var(--themeColor);
}
.revice_address_row .detail_address .address_beauty .address_right {
  flex: 5;
}
.revice_address_row .detail_address .address_beauty .address_right .user_tel {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.revice_address_row .detail_address .address_beauty .address_right .user_tel .address_name {
  color: #333333;
  font-size: 28rpx;
  margin-right: 15rpx;
}
.revice_address_row .detail_address .address_beauty .address_right .user_tel .address_tel {
  font-size: 24rpx;
  color: #999999;
}
.revice_address_row .detail_address .address_beauty .address_right .user_address {
  font-size: 22rpx;
  color: #33333;
  margin-bottom: 10rpx;
}
.revice_address_row .detail_address .address_beauty .address_right .tips {
  font-size: 22rpx;
  color: var(--themeColor);
}
.revice_address_row .detail_address .address_beauty .edit_address {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}
.revice_address_row .detail_address .address_beauty .edit_address .img_edit {
  width: 50%;
  height: 50%;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  background-color: #fff;
  width: 95%;
  border-radius: 20rpx;
  margin: 20rpx auto;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 40rpx;
  background-color: #fff;
  width: 95%;
  border-radius: 20rpx;
  margin: 20rpx auto;
}
.cart_content .cart_main .cart_item .cart_img_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_wrap .img5 {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 7;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666666;
  font-size: 26rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 30rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
  margin-right: 20rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 68rpx;
}
.footer_tool .total_price_wrap {
  flex: 5;
  padding-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.footer_tool .order_pay_wrap {
  flex: 3;
  background-color: var(--themeColor);
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  height: 80rpx;
  margin-right: 10rpx;
}
.full_screen {
  position: absolute;
  background-color: #fff;
  width: 100%;
  height: 68rpx;
  bottom: 0;
  left: 0;
}
